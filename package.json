{
  "name": "react-command-palette",
  "version": "0.16.2",
  "description": "WAI-ARIA compliant React command palette like the one in Atom",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "scripts": {
    "start": "npm run storybook",
    "netlify": "react-scripts build",
    "dev": "yarn storybook",
    "build": "cross-env BABEL_ENV=production rollup -c",
    "test": "react-scripts test --env=jsdom",
    "coverage": "yarn test --coverage --watchAll=false --silent --ci",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "build-storybook-docs": "build-storybook -s public --docs",
    "release": "auto shipit --base-branch=main",
    "chromatic": "chromatic --project-token 5981upe4q43 --exit-zero-on-changes"
  },
  "resolutions": {
    "@storybook/react/babel-loader": "8.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asabaylus/react-command-palette.git"
  },
  "keywords": [
    "react",
    "command",
    "palette",
    "command palette",
    "command-palette",
    "accessibile",
    "react-component"
  ],
  "author": "Asa Baylus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/asabaylus/react-command-palette/issues"
  },
  "peerDependencies": {
    "react": "17.x",
    "react-dom": "17.x"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@storybook/addon-a11y": "^6.3.2",
    "@storybook/addon-actions": "^6.3.1",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-jest": "^6.3.2",
    "@storybook/addon-knobs": "^6.2.9",
    "@storybook/addon-links": "^6.3.2",
    "@storybook/addon-options": "^5.3.21",
    "@storybook/node-logger": "^6.3.2",
    "@storybook/preset-create-react-app": "^3.1.7",
    "@storybook/react": "^6.2.8",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.0",
    "auto": "^10.29.3",
    "chromatic": "^5.9.2",
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.1",
    "postcss": "8.x",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^4.0.3",
    "rollup": "^2.52.6",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-replace": "^2.2.0"
  },
  "dependencies": {
    "fast-deep-equal": "^3.1.3",
    "fuzzysort": "^1.1.4",
    "mousetrap": "^1.6.5",
    "react-autosuggest": "^10.1.0",
    "react-modal": "^3.13.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "babel": {
    "presets": [
      [
        "react-app",
        {
          "absoluteRuntime": false
        }
      ]
    ]
  },
  "files": [
    "dist",
    "examples",
    "themes"
  ],
  "jest": {
    "restoreMocks": true,
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/src/examples/**",
      "!<rootDir>/src/themes/**",
      "!<rootDir>/src/*test*",
      "!<rootDir>/src/index.*"
    ]
  }
}
